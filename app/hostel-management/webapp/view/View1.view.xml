<mvc:View controllerName="hostel.com.hostelmanagement.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards">
    <Page id="page" title="Kalpavriksha Hostel" showHeader="false">
        <!-- === TOP BAR === -->
        <Bar class="customBar">
            <contentLeft>
                <Image src="images/hostel.jpg" alt="Hostel Logo" decorative="false" width="40px" height="40px" class="circleImage" />
                <Text text="Kalpavriksha Hostel" class="sapUiSmallMarginBegin sapUiLargeFontSize" />
            </contentLeft>

            <!-- <contentMiddle>
               
            </contentMiddle> -->

            <contentRight>
                <Button text="Admin" class="sapUiLargeMarginEnd" press="OnAdminTile" />
                <Button text="Home" class="sapUiLargeMarginEnd" />
                <Button text="About Us" class="sapUiLargeMarginEnd" />
                <Button text="Contact Us" class="sapUiLargeMarginEnd" />
                <HBox>
                    <Button text="Login" type="Emphasized" press="LoginPage" />
                    <Button text="Signup" class="sapUiTinyMarginBegin" press="SigninPage" />
                </HBox>
            </contentRight>
        </Bar>

        <content>
            <Carousel id="myCarousel" height="500px" loop="true" showPageIndicator="true" class="customCarousel">
                <!-- Card 1 -->
                <VBox alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTop sapUiLargeMarginBottom responsive-card-container">
                    <Panel width="90%" class="responsive-panel">
                        <headerToolbar>
                            <Toolbar class="responsive-toolbar">
                                <Title text="Hot Water Service" level="H2" class="service-title" />
                                <ToolbarSpacer />
                                <ObjectStatus text="24/7 Available" state="Success" class="status-indicator" />
                            </Toolbar>
                        </headerToolbar>

                        <HBox direction="{= ${device>/system/phone} ? 'Column' : 'Row'}" justifyContent="SpaceBetween" alignItems="Stretch" class="responsive-content">
                            <!-- Column 1: Big Image -->
                            <VBox width="{= ${device>/system/phone} ? '100%' : '55%'}" class="sapUiSmallMargin image-section">
                                <Image src="images/food.jpg" width="100%" height="100%" class="big-image" densityAware="false" />
                            </VBox>

                            <!-- Column 2: Description -->
                            <VBox width="{= ${device>/system/phone} ? '100%' : '40%'}" class="sapUiSmallMargin description-section">
                                <Text text="Enjoy 24/7 access to clean and safe hot water for your comfort.
                        Our hostel provides reliable geysers and water heaters in every washroom.
                        Perfect for refreshing morning showers and relaxing evenings.
                        Regular maintenance ensures consistent temperature and hygiene.
                        Stay warm and comfortable all year round with our trusted hot water service." wrapping="true" class="responsive-text" />
                                <Button text="Learn More" type="Emphasized" class="sapUiSmallMarginTop action-button" press="onLearnMore" />
                            </VBox>
                        </HBox>
                    </Panel>
                </VBox>

