            </Carousel>
        </content>

        <Panel
            headerText="Room Details"
            width="100%"
            class="sapUiSmallMargin"
        >
            <HBox
                items="{roomsModel>/}"
                wrap="Wrap"
                justifyContent="Center"
                class="sapUiSmallMargin"
            >
                <VBox
                    class="sapUiSmallMargin sapUiSmallPadding sapUiContentPadding customCard"
                    width="30%"
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    direction="Column"
                    press=".onRoomPress"
                >
                    <!-- Image Section -->
                    <VBox
                        alignItems="Center"
                        width="100%"
                    >
                        <Image
                            src="{roomsModel>imageSrc}"
                            width="100%"
                            height="180px"
                            densityAware="false"
                            class="sapUiSmallMarginBottom"
                            press="SeeDetails"
                        />
                    </VBox>

                    <!-- Content Section -->
                    <VBox
                        alignItems="Center"
                        width="100%"
                        justifyContent="SpaceBetween"
                        class="sapUiSmallMarginTop"
                    >
                        <VBox
                            alignItems="Center"
                            class="sapUiTinyMarginBottom"
                        >
                            <Title
                                text="{roomsModel>AC_type}"
                                level="H3"
                                class="sapUiTinyMarginBottom"
                                titleStyle="H3"
                            />
                            <ObjectNumber
                                number="â‚¹{roomsModel>Price}"
                                unit="per night"
                                state="Success"
                                class="sapUiSmallMarginBottom"
                            />
                        </VBox>

                        <Text
                            text="{roomsModel>description}"
                            wrapping="true"
                            class="sapUiSmallMarginTop sapUiSmallMarginBottom description-text"
                            width="100%"
                            maxLines="3"
                        />
                    </VBox>
                </VBox>
            </HBox>
        </Panel>

        <footer>
            <OverflowToolbar>
                <Text text="@KALPAVRIKSHA HOSTEL" />
                <ToolbarSpacer />
                <Button
                    text="BOOK ROOM"
                    press="onNavigateToBooking"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
