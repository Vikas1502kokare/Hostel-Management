<mvc:View
    controllerName="hostel.com.hostelmanagement.controller.PriceList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
<Page title="Price Management" showNavButton="true" navButtonPress="onBack">
  <content>
    <fb:FilterBar 
    id="filterBarPrice" 
    clear=".onFilterClear" 
    search=".onFilterSearch"
    showClearOnFB="true"
    showFilterConfiguration="false"
    showAllFilters="true"
    filtersDialogCancel="false"
    persistencyKey="priceFilterPersKey"
    useToolbar="false"
    filterChange=".onFilterChange"
    afterVariantLoad=".onAfterVariantLoad">

    <fb:filterGroupItems>

        <!-- Type -->
        <fb:FilterGroupItem name="Type" label="Type" groupName="Group1" visibleInFilterBar="true">
            <fb:control>
                <ComboBox id="filterType" placeholder="Select Type" showClearIcon="true">
                    <core:Item key="Room" text="Room" />
                    <core:Item key="Food" text="Food" />
                    <core:Item key="Laundry" text="Laundry" />
                    <core:Item key="Other" text="Other" />
                </ComboBox>
            </fb:control>
        </fb:FilterGroupItem>

        <!-- Payment Name -->
        <fb:FilterGroupItem name="PaymentName" label="Payment Name" groupName="Group1" visibleInFilterBar="true">
            <fb:control>
                <Input id="filterPaymentName" placeholder="Enter Payment Name" showClearIcon="true" />
            </fb:control>
        </fb:FilterGroupItem>

        <!-- Currency -->
        <fb:FilterGroupItem name="Currency" label="Currency" groupName="Group1" visibleInFilterBar="true">
            <fb:control>
                <ComboBox id="filterCurrency" placeholder="Select Currency" showClearIcon="true" selectedKey="">
                    <core:Item key="INR" text="INR" />
                    <core:Item key="USD" text="USD" />
                    <core:Item key="EUR" text="EUR" />
                </ComboBox>
            </fb:control>
        </fb:FilterGroupItem>

        <!-- Price Range -->
        <fb:FilterGroupItem name="Price" label="Price Range" groupName="Group1" visibleInFilterBar="true">
            <fb:control>
                <HBox>
                    <Input id="filterPriceMin" placeholder="Min" type="Number" width="6rem" />
                    <Text text=" - " />
                    <Input id="filterPriceMax" placeholder="Max" type="Number" width="6rem" />
                </HBox>
            </fb:control>
        </fb:FilterGroupItem>

    </fb:filterGroupItems>
</fb:FilterBar>


    <Table
      id="priceTable"
      items="{PriceModel>/}"
      mode="SingleSelectLeft"
      selectionChange=".onSelectionChange">
      <headerToolbar>
        <Toolbar>
          <Title text="Price List" level="H2"/>
            <ToolbarSpacer/>
           <Button text="Add Price" icon="sap-icon://add" press=".onAddPrice"/>
      <Button text="Edit" icon="sap-icon://edit" press=".onEditPrice" id="btnEdit" enabled="false"/>
      <Button text="Delete" icon="sap-icon://delete" press=".onDeletePrice" id="btnDelete" enabled="false"/>
        </Toolbar>
      </headerToolbar>

      <columns>
        <Column><Text text="Type"/></Column>
        <Column><Text text="Payment Name"/></Column>
        <Column><Text text="Price"/></Column>
        <Column><Text text="Currency"/></Column>
      </columns>

      <items>
        <ColumnListItem>
          <Text text="{PriceModel>Type}"/>
          <Text text="{PriceModel>PaymentName}"/>
          <Text text="{PriceModel>Price}"/>
          <Text text="{PriceModel>Currency}"/>
        </ColumnListItem>
      </items>
    </Table>
  </content>
</Page>


</mvc:View>