<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">

    <Dialog
        id="idRoomDialog"
             title="{=${roomForm>/editMode} ? 'Edit Room Details' : 'Add New Room'}"
        class="sapUiContentPadding"
        draggable="true"
        resizable="true">

        <content>
            <f:SimpleForm
                id="idRoomForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="2"
                emptySpanM="2"
                columnsL="1"
                columnsM="1">

                <Label text="Room No" />
                <Input value="{roomForm>/RoomNo}" placeholder="Enter Room No" />

                <Label text="Bed Type" />
                <Input value="{roomForm>/BedTypes}" placeholder="Enter Bed Type" />

                <Label text="Price" />
                <Input value="{roomForm>/Price}" placeholder="Enter Price" type="Number" />

                <Label text="AC Type" />
                <Input value="{roomForm>/AC_type}" placeholder="Enter AC Type" />

                <Label text="Sharable" />
                <Switch state="{roomForm>/Shareble}" />

                <Label text="Currency" />
                <Input value="{roomForm>/Currency}" placeholder="Enter Currency" />

                <Label text="No. of Persons" />
                <Input value="{roomForm>/NoOfPersons}" placeholder="Enter Persons" type="Number" />

                <Label text="Branch Code" />
                <Input value="{roomForm>/BranchCode}" placeholder="Enter Branch Code" />

                <Label text="Company Code" />
                <Input value="{roomForm>/CompanyCode}" placeholder="Enter Company Code" />

                <Label text="Description" />
                <TextArea value="{roomForm>/description}" placeholder="Enter Description" rows="3" />

       <!-- Attachment Upload -->
   
   
       <Title text="Upload Image" level="H3" />
    <MessageStrip visible="false" text="Please upload images" type="Warning" enableFormattedText="true" showIcon="true"/>
   <Label text="Upload Image" required="true" />
 
    <u:FileUploader 
               id="jobFileUploader" 
               fileSizeExceed="onFileSizeExceeds" 
               maximumFileSize="5MB" 
               typeMissmatch="onFileTypeMissmatch" 
               fileType="jpg,JPEG,png" 
               change="onFileChange" 
               buttonOnly="true" 
               sameFilenameAllowed="true" 
               iconFirst="true" 
               buttonText="Upload Room Image" 
               useMultipart="false" 
               sendXHR="false" /> 
                <MessageStrip id="fileErrorText" visible="false" text="" type="Error" enableFormattedText="true" showIcon="true" />
          <Tokenizer id="id_tokenizer" width="100%" tokenDelete="onTokenDelete" tokens="{tokenModel>/tokens}">
          <Token key="{tokenModel>key}" text="{tokenModel>text}" />
        </Tokenizer>




         </f:SimpleForm>

        </content>

        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveRoom" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelRoom" />
        </endButton>

    </Dialog>
</core:FragmentDefinition>
